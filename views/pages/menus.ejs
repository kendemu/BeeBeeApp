<!DOCTYPE html>
<html lang="en">
<head>
    <%include ../partials/head %>
</head>
<body class="container">
  <header>
    <%include ../partials/header %>
  </header>
  <main>
    <div class="jumbotron">
      <h1 class="text-center"><%= category %></h1>
    </div>
    <div class="container">
      <table class="table">
	<thead>
	  <tr>
	    <th>Name</th>
	    <th>Price</th>
	  </tr>
	</thead>
	<tbody>
	  <% foods.forEach(function(food){ %>
	  <tr>
	    <td> <%= food.name %> </td>
	    <td> <%= food.price %> </td>
	  </tr>
	  <% }); %>
	</tbody>
      </table>
    </div>
  </main>
</body>
</html>
